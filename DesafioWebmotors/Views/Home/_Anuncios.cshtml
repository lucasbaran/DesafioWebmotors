@model IEnumerable<DesafioWebmotors.Domain.Entities.AnuncioWebmotors>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Marca</th>
            <th scope="col">Modelo</th>
            <th scope="col">Versao</th>
            <th scope="col">Ano</th>
            <th scope="col">Quilometragem</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anuncio in Model)
        {
        <tr>
            <th scope="row">@anuncio.ID</th>
            <td>@anuncio.Marca</td>
            <td>@anuncio.Modelo</td>
            <td>@anuncio.Versao</td>
            <td>@anuncio.Ano</td>
            <td>@anuncio.Quilometragem</td>
            <td>
                <a asp-action="Editar" asp-route-id="@anuncio.ID">Editar</a>
                <a asp-action="Deletar" asp-route-id="@anuncio.ID">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>